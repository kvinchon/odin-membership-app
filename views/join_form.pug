extends layout 

block content
  h1= title 

  form(method='POST')
    div.form-group 
      label(for='passcode') Passcode:
      input#passcode.form-control(type='text' name='passcode' placeholder='Enter secret passcode' required)
    button.btn.btn-primary(type='submit') Submit
  
  if errors
    ul
      each error in errors 
        li= error.msg
