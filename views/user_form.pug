extends layout 

block content 
  h1 #{title}: #{user._id}

  form(method='POST')
    div.form-group
      label(for='first_name') First name:
      input#first_name.form-control(type='text' name='first_name' placeholder='First name' maxLength='100' value=user.first_name required)
    div.form-group 
      label(for='last_name') Last name:
      input#last_name.form-control(type='text' name='last_name' placeholder='Last name' maxLength='100' value=user.last_name required)
    div.form-group 
      label(for='username') Username:
      input#username.form-control(type='text' name='username' placeholder='Username' maxLength='100' value=user.username required)
    div.form-group
      label(for='password') New password:
      input#password.form-control(type='password' name='password' placeholder='New password')
    div.form-group
      label(for='confirm_password') Confirm new password:
      input#confirm_password.form-control(type='password' name='confirm_password' placeholder='Confirm new password')
    div.form-group 
      label(for='status') Status:
      select#status.form-control(name='status' required)
        option(value='') --Please select a status--
        each status in statuses
          if user.status === status
            option(value=status selected) #{status}
          else
            option(value=status) #{status}
    div.form-group
      label(for='admin') Admin &nbsp;
      if user.admin
        input#admin.checkbox-input(type='checkbox' name='admin' checked)
      else
        input#admin.checkbox-input(type='checkbox' name='admin')
    button.btn.btn-primary(type='submit') Update

  if errors
    ul
      each error in errors
        li= error.msg 
