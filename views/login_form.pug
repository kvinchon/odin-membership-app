extends layout 

block content
  h1= title 

  form(method='POST')
    div.form-group 
      label(for='username') Username:
      input#username.form-control(type='text' name='username', placeholder='Username' required value=(user === undefined ? '' : user.username))
    div.form-group 
      label(for='password') Password: 
      input#password.form-control(type='password' name='password' placeholder='Password' required)
    button.btn.btn-primary(type='submit') Log in 

  if errors
    ul 
      each error in errors 
        li= error.msg
        